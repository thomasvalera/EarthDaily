# Uncomment the next line to define a global platform for your project
# platform :ios, '12.0'

target 'News' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for News
  pod 'SwiftLint' # Linting
  pod 'Gloss', '~> 2.0.1' # JSON parsing library
  pod 'Then' # Swift initializers syntactic sugar
  pod 'Alamofire', '~> 4.7' # Networking librabry
  pod 'AlamofireImage', '~> 3.4'
  
  target 'NewsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'NewsUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'ValionKit' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for News
    pod 'SwiftLint' # Linting
    pod 'Then' # Swift initializers syntactic sugar
    
end
